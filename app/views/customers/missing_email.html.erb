<div>
  <div class="links">
      <%= link_to ' all customers |', '/' %>

      <%= link_to ' alphabetized', customers_alphabetized_path %>
    </div>
  <br>
  <h1 class="title is-2">Customers Missing E-mail</h1>
  <% if @customers.empty? %>
    <p class="subtitle is-5">There are no customers available to preview.</p>
  <% else %>

    <div class="columns is-multiline">
      <%= render @customers %>
    </div>
    <div class="links bottom">
      <%= link_to ' all customers |', '/' %>

      <%= link_to ' alphabetized', customers_alphabetized_path %>
    </div>
  <% end %>
</div>