<% if params[:column_full] %>
<div class="column is-full">
<% else %>
<div class="column is-one-third">
<% end %>
  <div class="card">
    <div class="card-content">
      <% unless params[:no_link] %>
        <p class="title"><%= link_to customer.full_name, customer %></p>
      <% else %>
        <p class="title"><%= customer.full_name %> </p>
      <% end %>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        <span class="has-text-weight-semibold">Phone: <%= customer.phone_number %></span>
      </p>
      <p class="card-footer-item">
        <span class="has-text-weight-semibold">E-mail: <%= customer.email %></span>
      </p>
    </footer>
  </div>
</div>